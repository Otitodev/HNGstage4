# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# PostgreSQL Configuration (Neon)
DATABASE_URL=postgresql://username:password@ep-xxx.neon.tech/yourdbname?sslmode=require

# Application Settings
ENVIRONMENT=development
LOG_LEVEL=INFO

# Webhook Configuration (for local development with ngrok)
WEBHOOK_URL=https://your-ngrok-url.ngrok.io/api/webhook/sendgrid:8001

# Template Service Configuration
TEMPLATE_SERVICE_URL=http://localhost:8002
